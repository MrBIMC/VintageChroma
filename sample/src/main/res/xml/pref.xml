<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pavelsikun.vintagechroma.ChromaPreference
        android:key="rgb"
        android:title="RGB sample"
        android:enabled="false"/>

    <com.pavelsikun.vintagechroma.ChromaPreference
        android:key="argb"
        android:title="ARGB sample"
        app:chromaColorMode="ARGB"
        app:chromaInitialColor="#00ffff"/>

    <com.pavelsikun.vintagechroma.ChromaPreference
        android:key="argbhex"
        android:title="ARGB and HEX indicator sample"
        app:chromaColorMode="ARGB"
        app:chromaIndicatorMode="HEX"
        app:chromaInitialColor="@color/colorPrimary"/>

    <com.pavelsikun.vintagechroma.ChromaPreference
        android:key="hsv"
        android:title="HSV sample"
        app:chromaColorMode="HSV"
        app:chromaInitialColor="@color/colorAccent"/>

</PreferenceScreen>